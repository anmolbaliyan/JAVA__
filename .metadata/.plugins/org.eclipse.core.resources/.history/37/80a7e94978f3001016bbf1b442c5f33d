package in.co.rays;

public class Palindrome {
	public static void main(String[] args) {
		
	int a = 151;
	int n = a;
	int rev = 0;
	while (a != 0) {
		int d = n % 10;
		rev = rev * 10 + d;
		n = n/10;	
	}
	if (a == rev) {
		System.out.println("the number is palindrome: "+ rev);
		
	}
	else {
		System.out.println("the number is not palindrome: "+ rev);
	}
	}

}
